<section class="container">
    <h2 class="text-center my-3">{{ section.settings.title }}</h2>
    <div class="row">
        {% assign featured_collection = section.settings.featured_collection %}
        {% for product in collections[featured_collection].products %}
            {% assign image = product.featured_media.preview_image %}
            <div class="col">
                <div class="card py-3 my-3" style="width: 18rem;">
                    {% if image != blank %}
                        <img class="card-img-top" src="{{ image | image_url }}" alt="{{ product.title }}" width="small" height="small" loading="lazy">
                    {% else %}
                        {{ 'product-1' | placeholder_svg_tag: 'card-img-top' }}
                    {% endif %}
                    <div class="card-body">
                        <h3><a href="{{ product.url }}">{{ product.title }}</a></h3>
                        <p>{{ product.price | money }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
    </div>
</section>





{% schema %}
{
    "name": "Featured Collection",
    "class": "featured-collection-section",
    "settings": [
        {
            "type": "collection",
            "id": "featured_collection",
            "label": "Collection"
        },
        {
            "type": "text",
            "id": "title",
            "default": "Featured Collection",
            "label": "Title"
        }
    ],
    "presets": [
        {
            "category": "Collection",
            "name": "Featured Collection"
        }
    ]
}
{% endschema %}